<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/happytravelshare"
    tools:context=".activities.ShareActivity">


    <Button
        android:id="@+id/buttonLoc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="101dp"
        android:background="@android:color/holo_red_light"
        android:text="SHARE LOCATION"
        android:textColor="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="171dp" />

    <Button
        android:id="@+id/buttonShare"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/submit"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="8dp"
        android:layout_marginBottom="180dp"
        android:background="@android:color/holo_red_light"
        android:text="SHARE APP"
        android:textColor="@android:color/holo_blue_bright"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="171dp" />

    <TextView
        android:id="@+id/textViewHide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="6dp"
        android:layout_marginBottom="10dp"
        android:text="TextView"
        android:textStyle="italic"
        android:visibility="invisible" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/buttonLoc"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="246dp"
        android:background="@android:color/holo_red_dark"
        android:text="Submit rating"
        android:textColor="@android:color/holo_blue_bright"
        android:textStyle="italic" />

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginBottom="290dp"
        android:progressBackgroundTint="@color/design_default_color_primary_dark"
        android:progressTint="@android:color/holo_red_dark"
        android:secondaryProgressTint="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/textRating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/ratingBar"
        android:layout_alignTop="@+id/textViewHide"
        android:text="TextView"
        android:textStyle="italic"
        android:visibility="invisible" />

</RelativeLayout>